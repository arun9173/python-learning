alphabet = ['a', 'b', 'c', 'd', 'e', 'f', 'g', 'h', 'i', 'j',
            'k', 'l', 'm', 'n', 'o', 'p', 'q', 'r', 's', 't', 'u',
            'v', 'w', 'x', 'y', 'z']

user_text = input("enter any word or name: ").lower()

for letter in user_text:
    position = alphabet.index(letter)
    print(f"postion of {letter} is : {position+1} ")
    

output:

enter any word or name: ARUN
postion of a is : 1 
postion of r is : 18 
postion of u is : 21 
postion of n is : 14 
