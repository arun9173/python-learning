print("Welcome to Treasure Island.")
print("Your mission is to find the treasure.") 

#Write your code below this line ðŸ‘‡

path = input("Which path do you want to choose (left / right )? ")

if path == 'left':
  print(path)
  path2 = input("Now what you want to do (swim / wait )? ")
  if path2 == 'wait':
    door = input("In which door do you want to enter (red / yellow / green / blue )? ")
    if door == 'red':
      print("You burned by fire. GAME OVER !!!")
    elif door == 'green':
      print("A big rock fall on your head. GAME OVER !!!")
    elif door == 'blue':
      print("You eaten by beasts. GAME OVER !!!")
    else:
      print("YOU WIN !!!")
  else:
    print("Attack by crocodile. GAME OVER !!!")
else:
  print("You fall into a hole. GAME OVER !!!")
  
